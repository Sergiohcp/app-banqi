{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@screens/*": ["./screens/*"],
        "@components/*": ["./components/*"],
        "@styles/*": ["./styles/*"],
        "@navigation/*": ["./navigation/*"],
        "@redux/*": ["./redux/*"],
        "@mocks/*": ["./mocks/*"],
        "@utils/*": ["./utils/*"],
        "@svg/*": ["./assets/svg/*"],
        "@lottie/*": ["./assets/lottie/*"],
        "@providers/*": ["./providers/*"],
      },
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }